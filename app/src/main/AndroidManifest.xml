<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ge.lordzoso.messenger">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Messenger"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".chatPage.ChatActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".UserSearchActivity" />
        <activity android:name=".userInfoPage.UserInfoPageActivity" />
        <activity android:name=".LoadingActivity" />
        <activity android:name=".mainPage.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".homePageActivity.HomePageActivity" />
        <activity android:name=".signUpPage.SignUpActivity" />
    </application>

</manifest>